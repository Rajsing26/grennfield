
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />
<form>
    <table method="post" action="/auth/login">
        <tr>
            <td>Email</td>
            <td><input type="email" name="email" id="email"</td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" id="password"</td>
        </tr>
        <tr>
            <td> </td>
            <td><button type="Submit">Login</button></td>
        </tr>
        <tr>
            <td> </td>
            <td><a href="/auth/register">Register new User</a> |  <a href="/auth/resetpassword">Reset Password</td>
        </tr>
    </table>
</form>


